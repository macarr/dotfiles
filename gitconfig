[password]
	helper = cache
[alias]
	branch-name = !git rev-parse --abbrev-ref HEAD
	publish = !git push -u origin $(git branch-name)
	mcommit = commit --no-edit
	cb = checkout -b
	lg = log --pretty=format:'%C(yellow)%h %Cred%ad %C(magenta)%an%Cgreen%d %Creset%s' --date=short
	co = checkout
[credential]
	helper = cache
